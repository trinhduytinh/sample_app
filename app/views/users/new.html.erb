<% provide :title, t("sign_up") %>
<h1><%= t("sign_up") %></h1>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for @user, url: signup_path do |f| %>
      <%= render "shared/error_messages" %>
      <%= f.label t("activerecord.attributes.user.name") %>
      <%= f.text_field :name %>
      <%= f.label t("activerecord.attributes.user.email") %>
      <%= f.email_field :email %>
      <%= f.label t("activerecord.attributes.user.password") %>
      <%= f.password_field :password %>
      <%= f.label :password_confirmation, t("activerecord.attributes.user.confirmation") %>
      <%= f.password_field :password_confirmation %>
      <%= f.submit t("create_my_account"), class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
